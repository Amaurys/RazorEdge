@model IEnumerable<SoporteEnLinea.Models.Product>


<ul class="nav nav-tabs nav-justified " id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Cortes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Servicios</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Productos</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <h1>Cortes</h1>
        <div class="row">
            @foreach (var item in Model.Where(producto => producto.Category == "Cortes"))
            {
                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Imgs/if_Hairdresser1_2315995.png" alt="...">
                        <div class="caption">
                            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            <h4>Precio:<span class="label label-success">@Html.DisplayFor(modelItem => item.Price)</span></h4>
                            @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <h1>Servicios</h1>
        <div class="row">
            @foreach (var item in Model.Where(producto => producto.Category == "Servicios"))
            {
                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Imgs/if_Nails_Salon1_2315986.png" alt="...">
                        <div class="caption">
                            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            <h4>Precio:<span class="label label-success">@Html.DisplayFor(modelItem => item.Price)</span></h4>
                            @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        <h1>Productos</h1>
        <div class="row">
            @foreach (var item in Model.Where(producto => producto.Category == "Productos"))
            {
                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Imgs/if_Esthetician1_2316000 (1).png" alt="...">
                        <div class="caption">
                            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            <h4>Precio:<span class="label label-success">@Html.DisplayFor(modelItem => item.Price)</span></h4>
                            @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>